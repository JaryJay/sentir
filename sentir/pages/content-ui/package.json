{
	"name": "@extension/content-ui",
	"version": "0.4.3",
	"description": "chrome extension - content ui",
	"type": "module",
	"private": true,
	"sideEffects": true,
	"files": [
		"dist/**"
	],
	"scripts": {
		"clean:bundle": "rimraf dist",
		"clean:node_modules": "bunx rimraf node_modules",
		"clean:turbo": "rimraf .turbo",
		"clean": "bun clean:bundle && bun clean:node_modules && bun clean:turbo",
		"ready": "bunx @tailwindcss/cli -i ./src/tailwind-input.css -o ./dist/tailwind-output.css -m",
		"build": "bun ready && vite build",
		"dev": "vite build --mode development",
		"lint": "eslint .",
		"lint:fix": "bun lint --fix",
		"prettier": "prettier . --write --ignore-path ../../.prettierignore",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@extension/env": "workspace:*",
		"@extension/i18n": "workspace:*",
		"@extension/shared": "workspace:*",
		"@extension/storage": "workspace:*",
		"@extension/ui": "workspace:*",
		"lodash": "^4.17.21",
		"sentir-common": "link:sentir-common"
	},
	"devDependencies": {
		"@extension/hmr": "workspace:*",
		"@extension/tailwindcss-config": "workspace:*",
		"@extension/tsconfig": "workspace:*",
		"@extension/vite-config": "workspace:*",
		"@types/lodash": "^4.17.16",
		"@tailwindcss/cli": "^4.1.5"
	}
}
